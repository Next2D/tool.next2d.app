<div id="reference-setting">

    <div id="reference-setting-title">
        <i class="active"></i>
        <span class="language" data-text="{{基準点}}">基準点</span>
    </div>

    <div id="reference-setting-view-area">
        <div class="reference-setting-container">

            <div id="reference-setting-box">
                <div class="reference-setting-box-list">
                    <div class="reference-setting-box-child" data-position="top-left" data-detail="{{左上}}"></div>
                    <div class="reference-setting-box-child" data-position="top-center" data-detail="{{中央上}}"></div>
                    <div class="reference-setting-box-child" data-position="top-right" data-detail="{{右上}}"></div>
                </div>
                <div class="reference-setting-box-list">
                    <div class="reference-setting-box-child" data-position="center-left" data-detail="{{中央左}}"></div>
                    <div class="reference-setting-box-child" data-position="center-top" data-detail="{{中央}}"></div>
                    <div class="reference-setting-box-child" data-position="center-right" data-detail="{{中央右}}"></div>
                </div>
                <div class="reference-setting-box-list">
                    <div class="reference-setting-box-child" data-position="bottom-left" data-detail="{{左下}}"></div>
                    <div class="reference-setting-box-child" data-position="bottom-center" data-detail="{{中央下}}"></div>
                    <div class="reference-setting-box-child" data-position="bottom-right" data-detail="{{右下}}"></div>
                </div>
            </div>

            <div class="reference-setting-text">X</div>
            <div><input type="text" id="transform-reference-x" value="0" data-detail="{{中心点のX座標}}" autocomplete="off"></div>

            <div class="reference-setting-text">Y</div>
            <div><input type="text" id="transform-reference-y" value="0" data-detail="{{中心点のY座標}}" autocomplete="off"></div>
        </div>
    </div>

</div>
