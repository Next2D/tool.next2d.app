{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./src/js",
    "paths": {
      "@/*": ["*"]
    },

    "types": [
      "vitest/globals",
      "@types/ace"
    ]
  },
  "include": [
    "src/js/**/*.ts",
    "@types/**/*.ts"
  ],
  "exclude": [
    "node_modules/**",
    "src/js/**/*.test.ts",
    "docs/**"
  ]
}
